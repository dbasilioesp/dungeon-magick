{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./server/build",
    "allowJs": true,
    "baseUrl": "./server/src",
    "paths": {
      "src": [
        "./server/src/*"
      ]
    }
  },
  "include": [
    "server/src/**/*",
    "server/config/**/*.js"
  ],
  "exclude": [
    "node_modules/*"
  ]
}
